{
    "$id": "https://raw.githubusercontent.com/fovea-research/cacao-json-schema/security-playbooks-v1.0-cs02/schemas/targets/location.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "location",
    "description": "This target type is used for commands thatneed to be processed or executed by a location. This object inherits the commontarget properties. In addition to the inherited properties, this sectiondefines three additional specific properties that are valid for this type.",
    "type": "object",
    "allOf": [
        {
            "$ref": "https://raw.githubusercontent.com/fovea-research/cacao-json-schema/security-playbooks-v1.0-cs02/schemas/targets/target.json"
        },
        {
            "properties": {
                "type": {
                    "type": "string",
                    "description": "The value of this property MUST be location.",
                    "enum": [
                        "location"
                    ]
                },
                "location": {
                    "$ref": "https://raw.githubusercontent.com/fovea-research/cacao-json-schema/security-playbooks-v1.0-cs02/schemas/data-types/civic-location.json",
                    "description": "Physical address information for this target."
                },
                "gps": {
                    "$ref": "https://raw.githubusercontent.com/fovea-research/cacao-json-schema/security-playbooks-v1.0-cs02/schemas/data-types/gps-location.json",
                    "description": "GPS information for this target."
                },
                "logical": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1,
                    "description": "An optional list of logical location names as defined by the playbook creator."
                }
            },
            "required": [
                "type"
            ]
        }
    ],
    "unevaluatedProperties": false
}